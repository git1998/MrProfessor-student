<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/faint_grey">




    <RelativeLayout
        android:id="@+id/fsvks"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/cardColor">


        <ImageView
            android:id="@+id/drawer_premium_fragment_backIv"
            android:layout_height="32dp"
            android:layout_width="32dp"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:tint="@color/jastest_grey"
            android:src="@drawable/ic_chevron_left_black_24dp"/>


        <TextView
            android:visibility="visible"
            android:id="@+id/activity_detailed_titleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="4dp"
            android:layout_toRightOf="@id/drawer_premium_fragment_backIv"
            android:layout_marginLeft="12dp"
            android:text="Available Courses"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:fontFamily="@font/varela"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/grey"/>


    </RelativeLayout>




<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/faint_grey"
    android:layout_below="@+id/fsvks"
    android:paddingHorizontal="12dp">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <TextView
            android:id="@+id/aiaiavi"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="Total courses : 08"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:fontFamily="@font/varela"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/browse_choosecourse_fragment_courseRv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="12dp"/>








</RelativeLayout>
</androidx.core.widget.NestedScrollView>


</RelativeLayout>